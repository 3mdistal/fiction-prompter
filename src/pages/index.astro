			}
			#city-info {
				font-style: italic;
				color: #666;
				text-align: right;
				margin-bottom: 20px;
			}
			#get-prompt-btn {
				background-color: #3498db;
				color: white;
				border: none;
				padding: 12px 24px;
				font-size: 1rem;
				font-weight: 600;
				cursor: pointer;
				border-radius: 5px;
				transition: background-color 0.3s, transform 0.1s;
				display: block;
				margin: 0 auto;
			}
			#get-prompt-btn:hover {
				background-color: #2980b9;
			}
			#get-prompt-btn:active {
				transform: scale(0.98);
			}
			#loading-spinner {
				text-align: center;
				font-style: italic;
				color: #7f8c8d;
				margin-top: 20px;
			}
		</style>
	</head>
	<body>
		<div class="container">
			<h1>Fiction Prompter</h1>
			<main class="content-wrapper">
				<div id="prompt-container"></div>
				<div id="city-info"></div>
				<button id="get-prompt-btn">Get Prompt</button>
				<div id="loading-spinner" style="display: none;">Loading...</div>
			</main>
		</div>

		<script>
			const promptContainer = document.getElementById('prompt-container');
			const cityInfo = document.getElementById('city-info');
			const getPromptBtn = document.getElementById('get-prompt-btn');
			const loadingSpinner = document.getElementById('loading-spinner');

			if (getPromptBtn && promptContainer && loadingSpinner && cityInfo) {
				getPromptBtn.addEventListener('click', async () => {
					loadingSpinner.style.display = 'block';
					promptContainer.innerHTML = '';
					cityInfo.innerHTML = '';

					try {
						const response = await fetch('/api/get-prompt');
						if (!response.ok) {
							throw new Error('Failed to fetch prompt');
						}
						const data = await response.json();
						promptContainer.innerHTML = data.prompt;
						cityInfo.innerHTML = `Story set in ${data.city.city}, ${data.city.region}, ${data.city.country}`;
					} catch (error) {
						console.error('Error fetching prompt:', error);
						promptContainer.innerHTML = 'Error fetching prompt. Please try again.';
					} finally {
						loadingSpinner.style.display = 'none';
					}
				});
			} else {
				console.error('One or more required elements not found');
			}
		</script>
	</body>
